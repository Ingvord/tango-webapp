var buildDir = "build/work";
$EXEC("ant -f jmvc/ant/build.xml build -Dapp=platform -DbuildDir=${buildDir}")
echo($OUT)
echo($ERR)

$EXEC("ant -f jmvc/ant/build.xml build -Dapp=login -DbuildDir=${buildDir}")
echo($OUT)
echo($ERR)

$EXEC("ant -f jmvc/ant/build.xml build -Dapp=tango_webapp -DbuildDir=${buildDir}")
echo($OUT)
echo($ERR)

$EXEC("ant -f jmvc/ant/build.xml compress-and-move -Dapp=login -DbuildDir=${buildDir}")
echo($OUT)
echo($ERR)

$EXEC("ant -f jmvc/ant/build.xml compress-and-move -Dapp=tango_webapp -DbuildDir=${buildDir}")
echo($OUT)
echo($ERR)

$EXEC("ant -f jmvc/ant/build.xml copy-webapp -DbuildDir=${buildDir}")
echo($OUT)
echo($ERR)

$EXEC("ant -f jmvc/ant/build.xml war -DbuildDir=${buildDir}")
echo($OUT)
echo($ERR)

