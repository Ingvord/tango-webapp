var js_prefix = './';
if(_platform === "WIN") js_prefix = '';


print("Load a command line Rhino JavaScript environment or run JavaScript script files in Rhino.")
print("Available commands:")
print(js_prefix + "js\t\t\t\tOpens a command line JavaScript environment")
print(js_prefix + "js -d\t\t\t\tOpens the Rhino debugger")
print(js_prefix + "js [FILE]\t\t\tRuns FILE in the Rhino environment")
print("")
print("JavaScriptMVC script usage:")
print("")
print(js_prefix + "js jmvc/update\n\t\tUpdates jmvc core (jmvc folder) from the repository \n(http://bitbucket.org/Ingvord/javascriptmvc-1.5.x)")
print(js_prefix + "js jmvc/engine install [NAME]\n\t\tInstalls an engine from the repository \n(http://bitbucket.org/Ingvord/jmvc-engines)")
print(js_prefix + "js jmvc/plugin install [NAME]\n\t\tInstalls a plugin from the repository \n(http://bitbucket.org/Ingvord/jmvc-plugins)")
print("")
print(js_prefix + "js jmvc/generate/app [NAME]\n\t\tCreates a new JavaScriptMVC application")
print(js_prefix + "js jmvc/generate/app_js [APP]\n\t\tGenerates apps/[APP].js and apps/[APP]/test.js files")
print(js_prefix + "js jmvc/generate/engine [NAME]\n\t\tGenerates a new engine skeleton")
print(js_prefix + "js jmvc/generate/fixture [METHOD] [URL]\n\t\tGenerates a fixture")
print(js_prefix + "js jmvc/generate/page [APP] [PAGE]\n\t\tGenerates a page for the application")
print(js_prefix + "js jmvc/generate/controller [NAME]\n\t\tGenerates a Controller file")
print(js_prefix + "js jmvc/generate/model [TYPE] [NAME]\n\t\tGenerates a Model file")
print(js_prefix + "js jmvc/generate/view [NAME]\n\t\tGenerates a View file")
print("")
print("When an application is already created use the following commands to modify it:")
print("")
print(js_prefix + "js jmvc/add/controller [NAME] [APP]\n\t\tAdds existing controller to an app")
print(js_prefix + "js jmvc/add/engine [NAME] [APP]\n\t\tAdds existing engine to an app")
print(js_prefix + "js jmvc/add/model [NAME] [APP]\n\t\tAdds existing model to an app")
print(js_prefix + "js jmvc/add/plugin [PLUGIN] [APP]\n\t\tAdds plugin to an app")
print(js_prefix + "js jmvc/add/resource [NAME] [APP]\n\t\tAdds existing javascript resource file to an app")
print(js_prefix + "js jmvc/add/stylesheet [NAME] [APP]\n\t\tAdds existing css file to an app")
print(js_prefix + "js jmvc/add/test [NAME] [TYPE] [APP]\n\t\tAdds existing test of type to an app")
print(js_prefix + "js jmvc/add/view [NAME] [APP]\n\t\tAdds existing view file to an app")
print("")
print("Calling any of these commands will result in moving the specified entity to an application specific folder, e.g. controller/[APP]/[NAME]_controller.js")
print("Note that all the mentioned entities must exist prior calling this commands. Use 'generate' commands to create them.")
print("")
print("There is also two special add commands:")
print("")
print(js_prefix + "js jmvc/add/shared [NAME] [TYPE] [APP]\n\t\tAdds existing entity of type to an app without moving the entity into application specific folder, i.e. [TYPE]s/[APP]/[NAME]")
print(js_prefix + "js jmvc/add/entity [PATH] [APP]\n\t\tAdds existing entity specified by path to an app, e.g. '"+js_prefix+"js jmvc/add/entity models/whatever/Model.js app'")
print("")
print("The following is used to create a production.js file for an application:")
print("")
print(js_prefix + "js apps/[NAME]/compress.js\n\t\tCompress your application and generate documentation")